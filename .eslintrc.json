{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "rules": {
        "no-console": "off",
        "no-param-reassign": 0,
        "global-require": 0,
        "class-methods-use-this": 0,
        "consistent-return": 0,
        "no-underscore-dangle": 0,
        "object-shorthand": [
            "error",
            "never"
        ],
        "no-lonely-if": "off"
    }
}